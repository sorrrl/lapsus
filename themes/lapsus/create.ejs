    <style>
      /* Futuristic Dropdown Styles */
      .futuristic-dropdown-wrapper {
        position: relative;
      }
      
      .futuristic-select-container {
        position: relative;
        isolation: isolate;
        cursor: pointer;
      }
      
      .futuristic-select {
        width: 100%;
        appearance: none;
        background: transparent;
        border: none;
        outline: none;
        padding: 0.875rem 1.125rem;
        padding-right: 3rem;
        font-size: 0.875rem;
        color: transparent;
        cursor: pointer;
        z-index: 2;
        position: relative;
      }
      
      .futuristic-select option {
        background: rgba(15, 23, 42, 0.98);
        color: #e5e7eb;
        padding: 0.75rem;
      }
      
      .futuristic-select-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        pointer-events: auto;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.25rem;
        min-height: 52px;
        z-index: 1;
        background: linear-gradient(135deg, rgba(15, 23, 42, 0.95), rgba(30, 41, 59, 0.98));
        border: 2px solid rgba(79, 70, 229, 0.3);
        border-radius: 14px;
        backdrop-filter: blur(20px);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 
          0 4px 20px rgba(15, 23, 42, 0.6),
          0 0 0 1px rgba(79, 70, 229, 0.1),
          inset 0 1px 0 rgba(255, 255, 255, 0.1),
          inset 0 -1px 0 rgba(0, 0, 0, 0.2);
      }
      
      .futuristic-select-container:hover .futuristic-select-overlay,
      .futuristic-select-container:focus-within .futuristic-select-overlay {
        border-color: rgba(129, 140, 248, 0.6);
        box-shadow: 
          0 8px 32px rgba(15, 23, 42, 0.8),
          0 0 0 1px rgba(79, 70, 229, 0.2),
          0 0 30px rgba(79, 70, 229, 0.4),
          0 0 60px rgba(34, 211, 238, 0.2),
          inset 0 1px 0 rgba(255, 255, 255, 0.15),
          inset 0 -1px 0 rgba(0, 0, 0, 0.2);
        transform: translateY(-1px);
      }
      
      .futuristic-select-value {
        color: #e5e7eb;
        font-size: 0.875rem;
        font-weight: 500;
        flex: 1;
        transition: color 0.3s ease;
      }
      
      .futuristic-select-arrow {
        width: 1.25rem;
        height: 1.25rem;
        color: #9ca3af;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .futuristic-select-container:hover .futuristic-select-arrow,
      .futuristic-select-container:focus-within .futuristic-select-arrow {
        color: #22d3ee;
        transform: rotate(180deg);
        filter: drop-shadow(0 0 8px rgba(34, 211, 238, 0.6));
      }
      
      .futuristic-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at center, rgba(79, 70, 229, 0.2), transparent 70%);
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
        border-radius: 14px;
        z-index: 0;
      }
      
      .futuristic-select-container:hover .futuristic-glow,
      .futuristic-select-container:focus-within .futuristic-glow {
        opacity: 1;
        animation: pulse-glow 2s ease-in-out infinite;
      }
      
      @keyframes pulse-glow {
        0%, 100% {
          opacity: 0.3;
          transform: translate(-50%, -50%) scale(1);
        }
        50% {
          opacity: 0.6;
          transform: translate(-50%, -50%) scale(1.05);
        }
      }
      
      .futuristic-select:focus + .futuristic-select-overlay {
        border-color: rgba(34, 211, 238, 0.8);
        box-shadow: 
          0 8px 32px rgba(15, 23, 42, 0.8),
          0 0 0 2px rgba(34, 211, 238, 0.3),
          0 0 40px rgba(79, 70, 229, 0.5),
          0 0 80px rgba(34, 211, 238, 0.3),
          inset 0 1px 0 rgba(255, 255, 255, 0.2),
          inset 0 -1px 0 rgba(0, 0, 0, 0.2);
      }
      
      .futuristic-select:focus + .futuristic-select-overlay .futuristic-select-value {
        color: #22d3ee;
        text-shadow: 0 0 10px rgba(34, 211, 238, 0.5);
      }
      
      /* Futuristic Dropdown Menu */
      .futuristic-dropdown-menu {
        position: absolute;
        bottom: calc(100% + 0.5rem);
        left: 0;
        right: 0;
        max-width: 100%;
        z-index: 9999;
        background: linear-gradient(135deg, rgba(15, 23, 42, 0.98), rgba(30, 41, 59, 0.98));
        border: 2px solid rgba(79, 70, 229, 0.4);
        border-radius: 14px;
        backdrop-filter: blur(20px);
        box-shadow: 
          0 -20px 60px rgba(15, 23, 42, 0.9),
          0 0 0 1px rgba(79, 70, 229, 0.2),
          0 0 40px rgba(79, 70, 229, 0.4),
          0 0 80px rgba(34, 211, 238, 0.2),
          inset 0 1px 0 rgba(255, 255, 255, 0.1);
        overflow: hidden;
        max-height: 320px;
        overflow-y: auto;
        margin-bottom: 0.5rem;
        opacity: 0;
        transform: scale(0.96) translateY(6px);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        pointer-events: none;
        padding: 0.375rem 0;
      }
      
      .futuristic-dropdown-menu[style*="display: block"] {
        opacity: 1;
        transform: scale(1) translateY(0);
        pointer-events: auto;
      }
      
      .futuristic-dropdown-menu::-webkit-scrollbar {
        width: 8px;
      }
      
      .futuristic-dropdown-menu::-webkit-scrollbar-track {
        background: rgba(15, 23, 42, 0.5);
        border-radius: 10px;
      }
      
      .futuristic-dropdown-menu::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.6), rgba(34, 211, 238, 0.6));
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(34, 211, 238, 0.4);
      }
      
      .futuristic-dropdown-menu::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.8), rgba(34, 211, 238, 0.8));
        box-shadow: 0 0 15px rgba(34, 211, 238, 0.6);
      }
      
      .futuristic-dropdown-item {
        position: relative;
        width: 100%;
        padding: 0.75rem 1rem;
        text-align: left;
        background: transparent;
        border: none;
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
        color: #e5e7eb;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: space-between;
        overflow: hidden;
        isolation: isolate;
        margin: 0;
        min-height: 44px;
        box-sizing: border-box;
      }
      
      .futuristic-dropdown-item:first-child {
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
      }
      
      .futuristic-dropdown-item:last-child {
        border-bottom: none;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
      }
      
      .futuristic-dropdown-item:hover {
        background: linear-gradient(90deg, rgba(79, 70, 229, 0.1), rgba(34, 211, 238, 0.05));
        color: #22d3ee;
        text-shadow: 0 0 6px rgba(34, 211, 238, 0.3);
      }
      
      .futuristic-dropdown-item:hover .futuristic-item-glow {
        opacity: 0.4;
      }
      
      .futuristic-item-selected {
        background: linear-gradient(90deg, rgba(79, 70, 229, 0.2), rgba(34, 211, 238, 0.12)) !important;
        border-left: 3px solid #22d3ee;
        color: #ffffff !important;
        text-shadow: 0 0 8px rgba(34, 211, 238, 0.5);
        box-shadow: 
          inset 0 0 15px rgba(79, 70, 229, 0.1),
          0 0 8px rgba(34, 211, 238, 0.15);
        padding-left: 0.875rem !important;
      }
      
      .futuristic-item-selected .futuristic-item-glow {
        opacity: 0.6;
      }
      
      .futuristic-item-text {
        flex: 1;
        transition: all 0.2s ease;
        line-height: 1.5;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
      
      .futuristic-item-check {
        width: 1rem;
        height: 1rem;
        color: #22d3ee;
        filter: drop-shadow(0 0 4px rgba(34, 211, 238, 0.6));
        flex-shrink: 0;
        margin-left: 0.5rem;
      }
      
      .futuristic-item-glow {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at left center, rgba(79, 70, 229, 0.3), transparent 70%);
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
        z-index: -1;
      }
      
      .futuristic-dropdown-item:hover .futuristic-item-glow {
        animation: item-glow-pulse 1.5s ease-in-out infinite;
      }
      
      @keyframes item-glow-pulse {
        0%, 100% {
          opacity: 0.3;
        }
        50% {
          opacity: 0.7;
        }
      }
      
      [x-cloak] { display: none !important; }

      /* Media Queries */
      @media (max-width: 640px) {
        .futuristic-dropdown-menu {
          bottom: auto;
          top: calc(100% + 0.5rem);
          transform-origin: top center;
        }

        .resources-grid {
          display: grid;
          grid-template-columns: 1fr;
          gap: 1rem;
        }

        .deploy-submit-btn { width: 100%; justify-content: center; }
      }

      @media (min-width: 641px) {
        .resources-grid {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          gap: 1rem;
        }
      }
    </style>
</head>
