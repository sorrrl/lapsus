                        item.addEventListener('click', function(e) {
                          e.stopPropagation();
                          const value = this.getAttribute('data-value');
                          const label = this.getAttribute('data-label');
                          
                          hiddenInput.value = value;
                          display.textContent = label;
                          display.classList.add('text-white');
                          display.classList.remove('text-gray-400');
                          
                          menu.querySelectorAll('.futuristic-dropdown-item').forEach(function(btn) {
                            btn.classList.remove('futuristic-item-selected');
                            const check = btn.querySelector('.futuristic-item-check');
                            if (check) check.style.display = 'none';
                          });
                          
                          this.classList.add('futuristic-item-selected');
                          const check = this.querySelector('.futuristic-item-check');
                          if (check) check.style.display = 'block';
                          
                          toggleMenu();
                        });
                      });
                      
                      document.addEventListener('click', function(e) {
                        if (!wrapper.contains(e.target)) {
                          isOpen = false;
                          menu.style.display = 'none';
                          arrow.style.transform = 'rotate(0deg)';
                        }
                      });
                      
                      <% if (firstEggValue) { %>
                      setTimeout(function() {
                        const firstItem = menu.querySelector('[data-value="<%= firstEggValue %>"]');
                        if (firstItem) {
                          firstItem.classList.add('futuristic-item-selected');
                          const check = firstItem.querySelector('.futuristic-item-check');
                          if (check) check.style.display = 'block';
                        }
                      }, 100);
                      <% } %>
                    })();
                  </script>
                </div>

                <!-- Resources Grid -->
                <div class="resources-grid">
                  <!-- RAM Field -->
                  <div class="form-field-group">
                    <label for="ram" class="form-label">
                      <div class="form-label-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                        </svg>
                      </div>
                      <span>ОЗУ (GiB)</span>
                    </label>
                    <input type="text" class="form-control form-control-enhanced w-full sm:w-1/2 md:w-1/3" id="ram" placeholder="<%= (packages ? packages.ram : 0)/1024 + extraresources.ram/1024 - ram/1024 %>" value="<%= (packages ? packages.ram : 0)/1024 + extraresources.ram/1024 - ram/1024 %>">
                  </div>

                  <!-- Disk Field -->
                  <div class="form-field-group">
                    <label for="disk" class="form-label">
                      <div class="form-label-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" />
                        </svg>
                      </div>
                      <span>Диск (GiB)</span>
                    </label>
                    <input type="text" class="form-control form-control-enhanced w-full sm:w-1/2 md:w-1/3" id="disk" placeholder="<%= (packages ? packages.disk : 0)/1024 + extraresources.disk/1024 - disk/1024 %>" value="<%= (packages ? packages.disk : 0)/1024 + extraresources.disk/1024 - disk/1024 %>">
                  </div>

                  <!-- CPU Field -->
                  <div class="form-field-group">
                    <label for="cpu" class="form-label">
                      <div class="form-label-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-16.5 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 002.25-2.25V6.75a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 6.75v10.5a2.25 2.25 0 002.25 2.25z" />
                        </svg>
                      </div>
                      <span>CPU (Ядра)</span>
                    </label>
                    <input type="text" class="form-control form-control-enhanced w-full sm:w-1/2 md:w-1/3" id="cpu" placeholder="<%= (packages ? packages.cpu : 0)/100 + extraresources.cpu/100 - cpu/100 %>" value="<%= (packages ? packages.cpu : 0)/100 + extraresources.cpu/100 - cpu/100 %>">
                  </div>
                </div>

                <!-- Deploy Button -->
                <div class="deploy-button-wrapper">
                  <button onclick="submitForm()" class="deploy-submit-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" />
                    </svg>
                    <span>Создать сервер</span>
                  </button>
                </div>
              </div>
              <script>
                  async function submitForm() {
                      let name = encodeURIComponent(document.getElementById("name").value);
                      let egg = encodeURIComponent(document.getElementById("egg").value);
                      let ram = encodeURIComponent(document.getElementById("ram").value);
                      let disk = encodeURIComponent(document.getElementById("disk").value);
                      let cpu = encodeURIComponent(document.getElementById("cpu").value);
                      let location = encodeURIComponent(document.getElementById("InputLoc").value);
                      document.location.href = `/create?name=${name}&egg=${egg}&ram=${ram*1024}&disk=${disk*1024}&cpu=${cpu*100}&location=${location}`;
                  };
              </script>
              </div>
          </div>
            <!-- /End replace -->
          </div>
        </div>
      </main>
    </div>
