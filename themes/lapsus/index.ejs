<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        padding: 2rem 1rem;
    }

    .login-container::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
            radial-gradient(circle at 20% 30%, rgba(99, 102, 241, 0.15), transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(34, 211, 238, 0.12), transparent 50%);
        pointer-events: none;
    }

    .login-card {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 480px;
        padding: 3rem 2.5rem;
        background: linear-gradient(to bottom right, rgba(15, 23, 42, 0.95), rgba(15, 23, 42, 0.98));
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 26px;
        box-shadow: 
            0 26px 80px rgba(15, 23, 42, 0.95),
            0 0 0 1px rgba(148, 163, 184, 0.1);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
    }

    .login-card::before {
        content: "";
        position: absolute;
        inset: -40%;
        background:
            radial-gradient(circle at top left, rgba(79, 70, 229, 0.3), transparent 55%),
            radial-gradient(circle at bottom right, rgba(34, 211, 238, 0.2), transparent 55%);
        opacity: 0.6;
        pointer-events: none;
    }

    .login-logo {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .login-logo img {
        height: 64px;
        width: auto;
        filter: drop-shadow(0 0 20px rgba(99, 102, 241, 0.4));
    }

    .login-title {
        text-align: center;
        margin-bottom: 0.5rem;
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #e5e7eb, #9ca3af);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .login-subtitle {
        text-align: center;
        color: #9ca3af;
        font-size: 0.95rem;
        margin-bottom: 2.5rem;
    }

    .login-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .login-btn {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        padding: 1rem 1.5rem;
        border-radius: 14px;
        font-size: 0.95rem;
        font-weight: 600;
        border: 1px solid transparent;
        cursor: pointer;
        transition: all 0.25s ease;
        overflow: hidden;
        text-decoration: none;
    }

    .login-btn::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.2), rgba(34, 211, 238, 0.15));
        opacity: 0;
        transition: opacity 0.25s ease;
    }

    .login-btn:hover::before {
        opacity: 1;
    }

    .login-btn-discord {
        background: linear-gradient(135deg, #5865F2, #4752C4);
        color: #ffffff;
        border-color: rgba(88, 101, 242, 0.5);
        box-shadow: 0 8px 24px rgba(88, 101, 242, 0.3);
    }

    .login-btn-discord:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(88, 101, 242, 0.4);
        border-color: rgba(88, 101, 242, 0.8);
    }

    .login-btn-google {
        background: linear-gradient(to bottom right, rgba(30, 41, 59, 0.8), rgba(15, 23, 42, 0.9));
        color: #9ca3af;
        border-color: rgba(148, 163, 184, 0.3);
        box-shadow: 0 4px 16px rgba(15, 23, 42, 0.5);
    }

    .login-btn-google:hover {
        transform: translateY(-2px);
        background: linear-gradient(to bottom right, rgba(30, 41, 59, 0.95), rgba(15, 23, 42, 0.98));
        color: #e5e7eb;
        border-color: rgba(148, 163, 184, 0.5);
        box-shadow: 0 8px 24px rgba(15, 23, 42, 0.6);
    }

    .login-btn-google:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .login-btn svg {
        width: 20px;
        height: 20px;
        margin-right: 0.75rem;
        position: relative;
        z-index: 1;
    }

    .login-btn span {
        position: relative;
        z-index: 1;
    }

    .login-features {
        margin-top: 2.5rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(148, 163, 184, 0.1);
    }

    .login-features-title {
        text-align: center;
        font-size: 0.85rem;
        color: #9ca3af;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .login-features-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        text-align: center;
    }

    .login-feature {
        font-size: 0.75rem;
        color: #9ca3af;
    }

    .login-feature-icon {
        display: inline-block;
        width: 32px;
        height: 32px;
        margin-bottom: 0.5rem;
        background: radial-gradient(circle at top left, rgba(79, 70, 229, 0.2), rgba(34, 211, 238, 0.15));
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 0.5rem;
        font-size: 1.2rem;
    }

    .tooltip {
        background: linear-gradient(to bottom right, rgba(15, 23, 42, 0.98), rgba(15, 23, 42, 0.95));
        color: #e5e7eb;
        padding: 0.75rem 1rem;
        border-radius: 10px;
        font-size: 0.85rem;
        opacity: 0;
        transition: opacity 0.3s;
        z-index: 1000;
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(148, 163, 184, 0.2);
        box-shadow: 0 8px 24px rgba(15, 23, 42, 0.8);
    }

    .tooltip.show {
        opacity: 1;
    }

    .tooltip-arrow {
        width: 0;
        height: 0;
        border-style: solid;
        position: absolute;
    }

    .tooltip-arrow[data-popper-placement^='top'] {
        border-width: 6px 6px 0 6px;
        border-color: rgba(15, 23, 42, 0.95) transparent transparent transparent;
        bottom: -6px;
        left: 50%;
        margin-left: -6px;
    }

    /* Modal styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .modal-content {
        background: linear-gradient(to bottom right, rgba(15, 23, 42, 0.98), rgba(15, 23, 42, 0.96));
        margin: auto;
        padding: 2.5rem;
        border-radius: 26px;
        border: 1px solid rgba(148, 163, 184, 0.2);
        box-shadow: 0 26px 80px rgba(15, 23, 42, 0.95);
        color: #e5e7eb;
        max-width: 480px;
        margin-top: 10%;
        position: relative;
    }

    .modal-content::before {
        content: "";
        position: absolute;
        inset: -40%;
        background:
            radial-gradient(circle at top left, rgba(79, 70, 229, 0.3), transparent 55%),
            radial-gradient(circle at bottom right, rgba(34, 211, 238, 0.2), transparent 55%);
        opacity: 0.6;
        pointer-events: none;
    }

    .modal-content h2 {
        color: #e5e7eb;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        position: relative;
        z-index: 1;
    }

    .modal-content p,
    .modal-content li {
        color: #9ca3af;
        position: relative;
        z-index: 1;
    }

    .modal-buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .modal-btn {
        padding: 0.75rem 1.5rem;
        border-radius: 14px;
        font-size: 0.9rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.25s ease;
        border: 1px solid transparent;
        position: relative;
        z-index: 1;
        text-decoration: none;
        text-align: center;
    }

    .modal-btn-primary {
        background: radial-gradient(circle at top left, #4f46e5, #22d3ee);
        color: #f9fafb;
        border-color: rgba(191, 219, 254, 0.6);
        box-shadow: 0 8px 24px rgba(37, 99, 235, 0.35);
    }

    .modal-btn-primary:hover {
        box-shadow: 0 12px 32px rgba(37, 99, 235, 0.5);
        transform: translateY(-1px);
    }

    .modal-btn-secondary {
        background: rgba(30, 41, 59, 0.8);
        color: #9ca3af;
        border-color: rgba(148, 163, 184, 0.3);
    }

    .modal-btn-secondary:hover {
        background: rgba(30, 41, 59, 0.95);
        color: #e5e7eb;
        border-color: rgba(148, 163, 184, 0.5);
    }

    @media (max-width: 640px) {
        .login-card {
            padding: 2rem 1.5rem;
            margin: 1rem;
        }

        .login-title {
            font-size: 1.75rem;
        }

        .login-features-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }
</style>
